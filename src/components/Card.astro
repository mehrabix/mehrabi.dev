---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div class="w-full md:w-1/3">
  <a href={url} target={target} class="block">
    <div class="transition-transform transform bg-white shadow-md hover:shadow-xl hover:scale-105 mx-4 my-2 rounded-lg overflow-hidden">
      <Image
        width={750}
        height={422}
        format="webp"
        src={img}
        alt={title}
        class="w-full h-auto rounded-t-lg"
      />
      <div class="p-6">
        <h2 class="text-2xl font-semibold text-gray-900 flex items-center">
          {title}
          {badge && (
            <div class="ml-3 inline-flex bg-indigo-600 text-white text-sm rounded-md px-2 py-1">
              {badge}
            </div>
          )}
        </h2>
        <p class="text-gray-700 mt-2">{desc}</p>
        <div class="mt-4 flex flex-wrap gap-2">
          {tags && tags.map((tag) => (
            <div class="badge badge-outline text-indigo-600">{tag}</div>
          ))}
        </div>
      </div>
    </div>
  </a>
</div>
